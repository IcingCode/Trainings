[defaults]
remote_user = {{ item.name }}
inventory = {{ item.inventory }}
private_key_file = ~/.ssh/id_rsa
log_path= /home/{{ item.name }}/ansible.log
roles_path=/roles/external/:/roles/internal
hash_behaviour = merge
ansible_managed = This file is managed by Ansible, all changes will be lost.
collections_paths =/etc/ansible-dev-collections
timeout = 30
display_skipped_hosts = False
host_key_checking = False
bin_ansible_callbacks = True
deprecation_warnings = False

[privilege_escalation]
become = true
become_method = sudo

[ssh_connection]
retries=2

[colors]
highlight = white
verbose = blue
warn = bright purple
error = red
debug = dark gray