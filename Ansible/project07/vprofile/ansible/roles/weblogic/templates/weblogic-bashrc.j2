}

function wls_stop() {
    echo -e "${BRED}ğŸ›‘ Stopping WebLogic AdminServer ({{ weblogic_domain_name }})...${RESET}"
    
    # Method 1: Use the daemon stop script if it exists
    if [ -f "{{ domain_home }}/bin/daemon-stop.sh" ]; then
        echo -e "${YELLOW}â³ Using daemon stop script...${RESET}"
        {{ domain_home }}/bin/daemon-stop.sh
    else
        # Method 2: Stop using PID file
        if [ -f "{{ domain_home }}/AdminServer.pid" ]; then
            local pid=$(cat {{ domain_home }}/AdminServer.pid)
            echo -e "${YELLOW}â³ Stopping WebLogic PID: ${pid}...${RESET}"
            
            if kill -0 ${pid} 2>/dev/null; then
                kill -TERM ${pid}
                
                # Wait for graceful shutdown
                local count=0
                while [ $count -lt 60 ]; do
                    if ! kill -0 ${pid} 2>/dev/null; then
                        echo -e "${GREEN}âœ… WebLogic stopped gracefully${RESET}"
                        rm -f {{ domain_home }}/AdminServer.pid
                        sleep 3
                        wls_status
                        return 0
                    fi
                    sleep 2
                    ((count++))
                done
                
                # Force kill if graceful shutdown failed
                echo -e "${YELLOW}âš ï¸  Graceful shutdown timeout, forcing stop...${RESET}"
                kill -KILL ${pid} 2>/dev/null || true
                rm -f {{ domain_home }}/AdminServer.pid
            else
                echo -e "${YELLOW}âš ï¸  Process ${pid} not running, removing stale PID file${RESET}"
                rm -f {{ domain_home }}/AdminServer.pid
            fi
        else
            # Method 3: Kill all WebLogic processes
            echo -e "${YELLOW}âš ï¸  No PID file found, killing all WebLogic processes...${RESET}"
            pkill -TERM -f "weblogic.Server" || true
            sleep 5
            pkill -KILL -f "weblogic.Server" 2>/dev/null || true
        fi
    fi
    
    echo -e "${YELLOW}â³ Waiting for shutdown to complete...${RESET}"
    sleep 5
    wls_status
}

function wls_restart() {
    echo -e "${BYELLOW}ğŸ”„ Restarting WebLogic AdminServer ({{ weblogic_domain_name }})...${RESET}"
    wls_stop
    
